---
const { platform, username } = Astro.props
---
<a href={`https://www.${platform}.com/${username}`}>{platform}</a>

<style>
  /* Tautan Biasa */
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
    border-radius: 4px; /* Membuat sudut yang sedikit melengkung */
    transition: background-color 0.3s ease; /* Animasi perubahan latar belakang saat hover */
  }

  /* Tautan Hover */
  a:hover {
    background-color: #6b38c6; /* Warna latar belakang saat hover */
  }
</style>

